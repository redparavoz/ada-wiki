with "@UTIL_DIR@config";
with "@UTIL_DIR@util";

project Wiki is
   Version := "@WIKI_VERSION@";
   Library_Dir := "@WIKI_LIBDIR@";
   Library_Type : Config.Library_Type_Type := external ("WIKI_LIBRARY_TYPE", "static");

   for Source_Dirs use ("src");
   for Library_Name use "ada_wiki";
   for Library_Kind use Library_Type;
   for Library_Version use "lib" & Project'Library_Name & ".so." & Version;

   for Library_Dir use "lib/" & Project'Library_Kind;
   for Object_Dir use "obj/wiki/" & Project'Library_Kind;

   package Builder renames Config.Builder;
   package Compiler renames Config.Compiler;
   package Ide      renames Config.Ide;

   package Binder is
       for Default_Switches ("Ada") use Config.Binder'Default_Switches ("Ada") & ("-a");
   end Binder;

end Wiki;
